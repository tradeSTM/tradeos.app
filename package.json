{
  "name": "tradeos-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=3003 node scripts/dev-server.js",
    "dev:hot": "cross-env NODE_ENV=development PORT=3003 next dev",
    "build": "next build && next export",
    "start": "next start -p 3003",
    "clean": "rimraf .next out",
    "lint": "next lint",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "next build && touch out/.nojekyll && gh-pages -d out -t true",
    "dev:local": "node scripts/local-dev.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "contracts:compile": "cd contracts && npx hardhat compile",
    "contracts:test": "cd contracts && npx hardhat test",
    "contracts:deploy:local": "cd contracts && npx hardhat run scripts/deployAll.ts --network localhost"
  },
  "dependencies": {
    "next": "^15.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.4.0"
  }
}
